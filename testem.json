{
    "framework": "qunit",
    "before_tests": "mkdir -p ephemeral",
    "livereload": true,
    "src_files": [
        "packages/**/*.js",
        "tests/integration/**/*.js",
        "main.js"
    ],
    "serve_files": [
        "tests/build/mocha/browser/expect.js",
        "main.js",
        "tests/integration/main.js"
    ],
    "launch_in_ci": [
        "PhantomJS"
    ],
    "launch_in_dev": [
        "PhantomJS"
    ]
}